<br />

<div class="booyah-box col-10 offset-1">
  <h1 class="text-center">Learn something today</h1>
  <hr />

  <% @courses.each do |course| %>
    <h2 class="text-center">
      <%= link_to course.title, course_path(course) %>
    </h2>
    <br />
    <%= image_tag course.image.to_s, class: 'img-fluid' %>
    <br />
    
      <div class="col-10 offset-1 text-center">
        <%= course.description %>
      </div>
      &nbsp;
      <div class="col-10 offset-4 text-center">
       &nbsp;&nbsp; <%= link_to 'More Details...', course_path(course), class: 'btn btn-primary btn-large' %>
      </div>
      <br /> <br /><br />
      <hr class="col-8 offset-2">
    <br class="clr" />
    <br class="clr" />
  <% end %>
</div>


  
