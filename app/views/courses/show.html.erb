<br />

<div class="booyah-box col-10 offset-1 text-center">
  <h1><%= @course.title %></h1>
  <br />
  <%= image_tag @course.image.to_s, class: 'img-fluid' %>
  <br />
  <div class="row">
    <div class="col-10 offset-1">
    <%= @course.description %> 
    </div>      
    &nbsp; &nbsp;
    <br />
    <br />
  </div>



  
    <div class="row">
      <div class="col-lg-4 col-1 text-center">
        <div class="col-med-4 col-1">
          <span class="badge badge-default btn-large">
            <%= number_to_currency @course.cost %>
          </span>


      <% if current_user %>
          <% if current_user.enrolled_in?(@course) %>
            <h3 class="badge badge-info float-center">You Are Enrolled!</h3>
          <% else %>
            <% if @course.free? %>
              <%= link_to 'Enroll', course_enrollments_path(@course), class: 'btn btn-primary btn-large', method: :post %>
            <% else %>
              <%= form_tag course_enrollments_path(@course) do %>
                <script src="https://checkout.stripe.com/checkout.js" class="stripe-button"
                        data-key="<%= Rails.configuration.stripe[:publishable_key] %>"
                        data-email="<%= current_user.email %>"
                        data-description="<%= @course.title %> (<%= number_to_currency @course.cost %>)"
                        data-amount="<%= (@course.cost * 100).to_i %>"
                        data-locale="auto"></script>
              <% end %>
            <% end %>
          <% end %>
        <% else %>
            <h3 class="badge badge-info">Sign in to enroll!</h3>
        <% end %>
      </div>
      

      <div class="col-10 text-center">
        <% if current_user && current_user == @course.user %>
          <%= link_to 'Administer', instructor_course_path(@course), class: 'btn btn-danger btn-large float-left' %>
        <% end %>
      </div>
    </div>
  </div>


  <div class="col-12">
    <% @course.sections.rank(:row_order).each do |section| %>
      <br /><br />
      <div class="section">
        <h3>
         <%= section.title %>
          <br />
        </h3>
        <div class="row">
          <% section.lessons.rank(:row_order).each do |lesson| %>
            <div class="col-12 col-sm-6">
              <div class="lesson text-center">
                <br />
                <%= link_to lesson_path(lesson) do %>
                  <b><%= lesson.title %></b>
                  </br>
                  <%= lesson.subtitle %>
                <% end %>
              </div>
            </div> 
          <% end %>
        </div>
        <br clear="clr" />
      </div>
    <% end %>
  </div>
</div>
